# ---- Suppress console spam ----
notify-level warning
notify-level-display fatal
notify-level-gsg fatal
notify-level-pnmimage fatal

# ---- Force basic OpenGL (safe for Intel HD) ----
load-display pandagl
gl-version 2 1

# ---- Disable shader warnings ----
basic-shaders-only true

# ---- Window settings ----
win-size 800 600
show-frame-rate-meter false
